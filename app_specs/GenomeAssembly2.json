{
	"id":"GenomeAssembly2",
	"script":"App-GenomeAssembly2",
	"label":"Assemble reads",
	"description":"Assemble reads into a set of contigs",
	"parameters":[
		{
		    "id": "paired_end_libs",
		    "type": "group",
		    "allow_multiple": true,
		    "required": 0,
		    "default" : null,
		    "group":[
			{
			    "id": "read1",
			    "required": true,
			    "label": "Read file 1",
			    "desc": "FASTQ file of reads",
			    "wstype": "ReadFile",
			    "type": "wstype"
			},
			{
			    "id": "read2",
			    "required": true,
			    "label": "Read file 2",
			    "desc": "FASTQ file of reads",
			    "wstype": "ReadFile",
			    "type": "wstype"
			},
			{
			    "id": "platform",
			    "label":"Sequencing Platform",
			    "required": 0,
			    "default": "infer",
			    "desc":"Sequencing platform used to generate the read library",
			    "type":"enum",
			    "enum": ["infer", "illumina", "iontorrent"]
			},
			{
			    "id": "interleaved",
			    "label": "Are the paired end reads interleaved?",
			    "required": 0,
			    "default": false,
			    "type": "bool"
			},
			{
			    "id": "read_orientation_outward",
			    "label": "Do the two reads in each pair face outward?",
			    "required": 0,
			    "default": false,
			    "type": "bool"
			},
			{
			    "id": "insert_size_mean",
			    "label": "Average insert size",
			    "required": 0,
			    "default": null,
			"type": "int"
			},
			{
			    "id": "insert_size_stdev",
			    "label": "Average insert standard deviation",
			    "required": 0,
			    "default": null,
			    "type": "float"
			}
		    ]
		},
		{
		    "id": "single_end_libs",
		    "type": "group",
		    "allow_multiple": true,
		    "required": 0,
		    "default" : null,
		    "group":[
			{
			    "id": "read",
			    "required": true,
			    "label": "Read file",
			    "desc": "FASTQ or FASTA file of reads",
			    "wstype": "ReadFile",
			    "type": "wstype"
			},
			{
			    "id":"platform",
			    "label":"Sequencing Platform",
			    "required": 0,
			    "default": "infer",
			    "desc":"Sequencing platform used to generate the read library",
			    "type":"enum",
			    "enum": ["infer", "illumina", "iontorrent", "pacbio", "nanopore"]
			}
		    ]
		},
		{
			"id": "srr_ids",
			"required": false,
		        "allow_multiple": true,
			"default": null,
			"label": "SRR ID",
			"desc": "Sequence Read Archive (SRA) Run ID",
			"type": "string"
		},
		{
			"id": "reference_assembly",
			"required": 0,
			"default": null,
			"label": "Contig file",
			"desc":"Reference set of assembled DNA contigs",
			"wstype":"Contigs",
			"type":"wstype"
		},
		{
			"id":"recipe",
			"label":"Assembly recipe",
			"required": 0,
			"default": "auto",
			"desc":"Recipe used for assembly",
			"type":"enum",
			"enum": ["auto", "unicycler", "spades", "canu" ]
		},
		{
			"id":"pipeline",
			"label":"Assembly pipeline arguments",
			"required": 0,
			"default": null,
			"desc":"Advanced assembly pipeline arguments that overrides recipe",
			"type":"string"
		},
		{
			"id":"min_contig_len",
			"label":"Minimal output contig length",
			"required": 0,
			"default": 300,
			"desc": "Filter out short contigs in final assembly",
			"type": "int"
		},
		{
			"id":"min_contig_cov",
			"label":"Minimal output contig coverage",
			"required": 0,
			"default": 5,
			"desc": "Filter out contigs with low read depth in final assembly",
			"type": "float"
		},
		{
			"id":"output_path",
			"label":"Output Folder",
			"required": 1,
			"default":null,
			"desc":"Path to which the output will be written.",
			"type":"folder"
		},
		{
			"id":"output_file",
			"label":"File Basename",
			"required": 1,
			"default":null,
			"desc":"Basename for the generated output files.",
			"type":"wsid"
		},
		{
			"id":"special_flags",
			"label":"Specialized flags",
			"required": 0,
			"default": null,
			"desc":"Specialized options to tune assembly method",
			"type":"enum",
			"enum": ["single-cell", "meta-spades" ]
		},
		{
			"id":"genome_size",
			"label":"Genome Size",
			"required": 0,
			"default": "5M",
			"desc":"Estimated genome size (for canu)",
			"type":"string"
		}
	]
}
