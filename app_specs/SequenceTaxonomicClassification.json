{
  "id": "SequenceTaxonomicClassification",
  "script": "App-SequenceTaxonomicClassification",
  "label": "classify reads",
  "description": "Compute taxonomic classification for read data",
  "parameters": [
    {
      "desc": "Input type (reads / contigs)",
      "required": 1,
      "default": null,
      "label": "Input Type",
      "type": "enum",
      "enum": [
        "reads",
        "contigs"
      ],
      "id": "input_type"
    },
    {
      "label": "Contig file",
      "wstype": "Contigs",
      "type": "wstype",
      "id": "reference_assembly",
      "required": 0,
      "desc": "Assembled DNA contigs",
      "default": null
    },
    {
      "id": "paired_end_libs",
      "type": "group",
      "allow_multiple": true,
      "required": 0,
      "default": null,
      "group": [
        {
          "id": "read1",
          "required": 1,
          "label": "Read file 1",
          "desc": "FASTQ or FASTA file of reads",
          "wstype": "ReadFile",
          "type": "wstype"
        },
        {
          "id": "read2",
          "required": 0,
          "label": "Read file 2",
          "desc": "FASTQ or FASTA file of reads",
          "wstype": "ReadFile",
          "type": "wstype"
        },
        {
          "id": "platform",
          "label": "Sequencing Platform",
          "required": 0,
          "default": "infer",
          "desc": "Sequencing platform used to generate the read library",
          "type": "enum",
          "enum": [
            "infer",
            "illumina",
            "pacbio",
            "nanopore"
          ]
        },
        {
          "id": "interleaved",
          "label": "Are the paired end reads interleaved?",
          "required": 0,
          "default": false,
          "type": "bool"
        },
        {
          "id": "read_orientation_outward",
          "label": "Do the two reads in each pair face outward?",
          "required": 0,
          "default": false,
          "type": "bool"
        },
        {
          "id": "insert_size_mean",
          "label": "Average insert size",
          "required": 0,
          "default": null,
          "type": "int"
        },
        {
          "id": "insert_size_stdev",
          "label": "Average insert standard deviation",
          "required": 0,
          "default": null,
          "type": "float"
        }
      ]
    },
    {
      "id": "single_end_libs",
      "type": "group",
      "allow_multiple": true,
      "required": 0,
      "default": null,
      "group": [
        {
          "id": "read",
          "required": 1,
          "label": "Read file",
          "desc": "FASTQ, FASTA or H5 file of reads",
          "wstype": "ReadFile",
          "type": "wstype"
        },
        {
          "id": "platform",
          "label": "Sequencing Platform",
          "required": 0,
          "default": "infer",
          "desc": "Sequencing platform used to generate the read library",
          "type": "enum",
          "enum": [
            "infer",
            "illumina",
            "pacbio",
            "nanopore"
          ]
        }
      ]
    },
    {
      "id": "algorithm",
      "type": "enum",
      "label": "Algorithm",
      "default": "Kraken",
      "enum": [
        "Kraken",
        "Centrifuge"
      ],
      "desc": "Classification algorithm",
      "required": 1
    },
    {
      "id": "database",
      "type": "enum",
      "label": "Database",
      "default": "Default NT",
      "enum": [
        "Default NT",
        "Protein"
      ],
      "desc": "Target database",
      "required": 1
    },
    {
      "id": "output_path",
      "label": "Output Folder",
      "required": 1,
      "default": null,
      "desc": "Path to which the output will be written. Defaults to the directory containing the input data. ",
      "type": "folder"
    },
    {
      "id": "output_file",
      "label": "File Basename",
      "required": 1,
      "default": null,
      "desc": "Basename for the generated output files. Defaults to the basename of the input data.",
      "type": "wsid"
    }
  ]
}
